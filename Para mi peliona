<script>
  const petalsContainer = document.querySelector('.petals');
  for (let i=0;i<18;i++){
    const el=document.createElement('div');el.className='petal';
    el.style.left=(Math.random()*80+10)+'%';
    el.style.animationDuration=(3.6+Math.random()*2.4)+'s';
    el.style.animationDelay=(Math.random()*2)+'s';
    const sz=8+Math.random()*12;
    el.style.width=sz+'px';el.style.height=(Math.max(6,Math.round(sz*0.7)))+'px';
    petalsContainer.appendChild(el);
  }
  setTimeout(()=>{
    document.querySelector('.bear.left').style.cssText+='transition:all .5s ease;left:170px;transform:translateX(6px) scale(1.02);';
    document.querySelector('.bear.right').style.cssText+='transition:all .5s ease;right:170px;transform:translateX(-6px) scale(1.02);';
  },3200);
</script>
